@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<style>
    td {
        padding: 5px 10px;
    }
    tr:not(:last-child) {
        border-bottom: 1px solid #eee;
    }
</style>

<form method="post">
    <table>
        <thead>
            <th>ID</th>
            <th>Name</th>
        </thead>
        <tbody>
            @foreach (var customer in Model.Customers)
            {
                <tr>
                    <td>@customer.Id</td>
                    <td>@customer.Name</td>
                    <td><a asp-page="./Edit" asp-route-id="@customer.Id">Edit</a></td>
                    <td><button type="submit" asp-page-handler="delete" asp-route-id="@customer.Id">Delete</button></td>
                </tr>
            }
        </tbody>
    </table>
</form>
